version: '3'

volumes:
  i2b2-db:
  auth:
  letsencrypt:

services:
  i2b2-web:
    container_name:
      i2b2.web
    restart: on-failure:5
    # image: ${IMAGE_NAMESPACE}/i2b2/i2b2-web:${APP_VERSION}
    build:
      context: ./web
      dockerfile: Dockerfile
    ports:
      - 80:80
      - 443:443
    env_file:
      - .env
      - .env.i2b2
    depends_on:
      - i2b2-wildfly

  i2b2-wildfly:
    container_name:
      i2b2.wildfly
    restart: on-failure:5
    # image: i2b2/i2b2-wildfly:${I2B2_WILDFLY_TAG}
    build:
      context: ./wildfly
      dockerfile: Dockerfile
    ports:
      - 8080:8080
      - 9990:9990
    env_file:
      - .env
      - .env.i2b2
      - ./secrets/i2b2-secrets
    depends_on:
      - i2b2-database

  i2b2-database:
    container_name:
      i2b2.database
    # image: postgres:12
    # image: ${IMAGE_NAMESPACE}/i2b2/i2b2-database:${APP_VERSION}
    build:
      context: ./database
      dockerfile: Dockerfile
    # entrypoint: ["postgres"]
    ## DEBUG command so we can exec a shell
    entrypoint: tail -F any
    ports:
      - 5432:5432
    volumes:
      - i2b2-db:/var/lib/postgresql/data
    env_file:
      - .env
      - ./secrets/i2b2-secrets

